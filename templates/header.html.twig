{% block header %}
	<header>
		<a href="{{ path('app_home')}}"><img src="{{asset('images/icon_cutout.png')}}" alt="Logo Garage V.Parrot" style="width:200px"></a>
		<p>Votre spécialiste en carrosserie, mécanique et entretien automobile</p>
		<ul class="nav align-items-center notype_list">
			<li>
				<a class="nav-link primary" aria-current="page" href="{{ path('app_home') }}">Accueil</a>
			</li>
			<li>
				<a class="nav-link primary" href="{{ path('app_shop') }}">Vente d'occasion</a>
			</li>
			{% if app.user %}
				<li class="nav-link text-dark">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }}
				</li>
				<li>
					<a class="nav-link primary" href="{{ path('app_logout') }}">
						<button class="btn ml-auto primary" type="button">
							Se déconnecter
						</button>
					</a>
				</li>
				{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a class="nav-link primary" href="{{ path('app_admin') }}">
							<button class="btn ml-auto primary" type="button">
								Profil
							</button>
						</a>
					</li>
				{% else %}
					<li>
						<a class="nav-link primary" href="{{ path('app_profile') }}">
							<button class="btn ml-auto primary" type="button">
								Profil
							</button>
						</a>
					</li>
				{% endif %}
			{% else %}
				<li>
					<a class="nav-link primary" href="{{ path('app_login')}}">
						<button class="btn ml-auto primary" type="button">
							Se connecter
						</button>
					</a>
				</li>
			{% endif %}
		</ul>
	</header>
{% endblock %}
